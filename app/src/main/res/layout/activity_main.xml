<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <ImageView
            android:layout_width="115dp"
            android:layout_height="81dp" app:srcCompat="@drawable/img_movie_real"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="Movie World"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.502"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_mainEmail"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="EMAIL" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_mainPassword" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_mainEmail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:hint="PASSWORD" android:textAlignment="center"/>
    <Button
            android:text="LOG IN"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_mainLogIn" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_mainPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="SIGN UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_mainSignUp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button_mainLogIn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"
            android:textColor="@android:color/holo_blue_light" android:textStyle="bold" android:textAllCaps="true"/>
    <TextView
            android:text="SIGN IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textStyle="bold"
            android:textAllCaps="true" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <com.facebook.login.widget.LoginButton
            android:text="Facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_mainFacebookLogIn"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Continue with Google"
            android:layout_width="186dp"
            android:layout_height="34dp"
            android:id="@+id/button_mainGoogleLogIn"
            app:layout_constraintTop_toBottomOf="@+id/button_mainFacebookLogIn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textStyle="bold" android:textColor="@color/com_facebook_button_background_color_focused"
            android:background="@android:color/holo_red_dark" android:layout_marginTop="8dp"/>
    <TextView
            android:text="OR VIA EMAIL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/button_mainGoogleLogIn"
            android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>