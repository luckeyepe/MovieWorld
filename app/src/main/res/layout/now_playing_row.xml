<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="430dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp" app:srcCompat="@drawable/img_movie_real"
                    android:id="@+id/imageView_nowPlayingRowMoviePoster" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Movie Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_nowPlayingRowMovieTitle" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_nowPlayingRowMoviePoster"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_nowPlayingRowMovieRunTime" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_nowPlayingRowMovieTitle"
                    android:textSize="18sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
            <Button
                    android:text="BUY"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:id="@+id/button_nowPlayingRowBuyTicket"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_nowPlayingRowMovieRunTime"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:background="@color/colorAccent" android:textStyle="bold"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"/>
            <Button
                    android:text="Reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:id="@+id/button_nowPlayingRowReserveTicket" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/button_nowPlayingRowBuyTicket"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>